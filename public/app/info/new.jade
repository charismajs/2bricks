.modal-header
  h3 Create Execution

.modal-body
  .tabbable
    ul.nav.nav-tabs
      li(ng-class="{active: tabName == 'info'}")
        a(ng-click="tabName = 'info'") Info
      li(ng-class="{active: tabName == 'file'}")
        a(ng-click="tabName = 'file'") File
    .tab-content
      div(ng-switch='tabName')
        div(ng-switch-when='info')
          table.table(style='margin-top:10px;')
            tr
              th Command
              td(colspan='3')
                input(type='text', placeholder="Input 'Command' with arguments", ng-model='newInfo.command')
            tr
              th Name
              td(colspan='3')
                input(type='text', placeholder="Input 'Name'", ng-model='newInfo.name')
            tr
              th Arguments
                button.btn.btn-info.btn-xs(type='button',ng-click='addArgument()')
                  span.glyphicon.glyphicon-plus
              td(colspan='3')
                .container
                  div.form-group(ng-repeat='arg in newInfo.arguments')
                    input.col-md-3.input-sm.inline(type='text', placeholder="Argument's Name", ng-model='arg.name')
                    input.col-md-4.input-sm.lnline(type='text', placeholder="Argument's Value", ng-model='arg.value')
                    input.col-md-5.input-sm(type='text', placeholder="Argument's Description", ng-model='arg.description')
                    button.btn.btn-danger.btn-xs(type='button', ng-hide="$first",ng-click="removeArgument($index)")
                      span.glyphicon.glyphicon-minus
            tr
              th Comment
              td(colspan='3')
                textarea(rows='5', cols='70', ng-model='newInfo.comment') {{ newInfo.comment }}
        div(ng-switch-when='file')
          table.table(style='margin-top:10px;',ng-repeat='file in newInfo.files')
            tr
              th Name
              td
                input.form-control.input-sm(type='text', placeholder="File Name", ng-model='file.name')
            tr
              th Content
              td
                textarea.form-control.input-sm(placeholder="Write file content", ng-model='file.content')
            tr
              th Description
              td
                textarea.form-control.input-sm(placeholder="Describe this file", ng-model='file.description')
            tr
              th Files
              td
                input(type='file', on-read-file='showContent($fileContent, $fileName, file)')

.modal-footer
  button.btn.btn-primary(ng-click="start()") Start
  button.btn.btn-warning(ng-click='cancel()') Cancel