.modal-header
	h3 {{ execution.command }}

.modal-body
	.row
		.col-md-4 Commnad
		.col-md-8 {{ execution.command }}
	.row
		.col-md-2 Name
		.col-md-4 blar..blar..blar..
		.col-md-2 Status
		.col-md-4 {{ execution.status }}
	.row
		.col-md-2 Start
		.col-md-4 {{ execution.start | date:'yyyy-MM-dd HH:mm:ss' }}
		.col-md-2 End
		.col-md-4 {{ execution.end | date:'yyyy-MM-dd HH:mm:ss' }}
	.row
		.col-md-12 Arguments
		.col-md-12
			.row
				.col-md-3 $Direcotry
				.col-md-6 /home
				.col-md-3 Absolute directory name
			.row
				.col-md-3 $Direcotry
				.col-md-6 /home
				.col-md-3 Absolute directory name
	.row
		.col-md-4 Files
		.col-md-8 create.hql
	.row
		.col-md-4 Description
		.col-md-4 Description

	div {{ execution.log }}

.modal-footer
button.btn.btn-primary(ng-click='start()', ng-show="execution.status !== 'begin'") start
button.btn.btn-danger(ng-click='stop()', ng-show="execution.status === 'begin'") stop
button.btn.btn-warning(ng-click='close()') Close